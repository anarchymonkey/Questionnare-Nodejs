<body>
        <nav class="nav navbar-default navbar-inverse">
                <a class="navbar-brand"> M<{*.*}>Q </a>
                <ul class="nav navbar-nav">
                        <li><a href="/" >Home</a></li>
                    </ul>
                <ul class="nav pull-right">
                
                <% if (!user.username){%>
                <button type="button" class="btn btn-primary navbar-btn " onclick="window.location.href='/signin' "style="margin-right:1em;">Sign in</button>
                 <%}else{ %>
                    <button type="button" class="btn btn-danger navbar-btn " onclick="window.location.href='/logout' "style="margin-right:1em;">logout <%= user.username %></button>
