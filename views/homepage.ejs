    <h3 id="selection"> Are you a teacher or a student?</h3>
    <button class="teacher" id="teach" onclick="window.location.href='/teacher'">Teacher</button>
    <button class="student" id="student" onclick="window.location.href='/signin'">Student</button>
    <%}else{%>
     <h3 id="selection">Lets continue your test <%= user.username %></h1>
     <button class="teacher" id="teach" onclick="window.location.href='/student/<%= user.id %>' ">Click Here</button>
     
    <%}%>
    </div>
       
