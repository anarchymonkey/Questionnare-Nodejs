<script>
    function main(){
        $(document).ready(()=>{
            $('#header').on("mouseover",()=>{
                $('#header').text('Hey');
            }).on("mouseout",()=>{
                $('#header').html('<h1 id="header"> <span id="under">Welc</span>ome To Xchievers </h1>')
            });
        });
    }

    main();
