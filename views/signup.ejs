<% include partials/authHeader.ejs %>

<div class="container">
    <h1 id="idea"><span id="under">Create N</span>ew Account</h1>

<form action="/signup" method="POST">

<div class="form-group">
    <label for="username">Username</label>
    <input type="text" name="username" id="username" class="form-control" required>
</div>
<div class="form-group">
    <label for="password">Password</label>
    <input type="password" name="password" id="password" class="form-control" required>
</div>
<div class="form-group">
    <label for="email">Email</label>
    <input type="email" name="email" id="email" class="form-control" required>
</div>
    <button class="btn-success btn-lg pull-left">Submit</button> 
</form>
<h4><button class="btn-primary btn-lg pull-right" onclick="window.location.href='/signin'">Login</button></h3>

</div>



